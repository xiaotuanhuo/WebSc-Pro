	        (select
	        <include refid="Base_Column_List"/>
	        from WSC_ORGANIZATION
	        <where>
	        	<!-- 卫监局管理员只能查看具有麻醉资质的医疗机构 -->
	        	<if test="bureau">
	        		AND credentials = '1'
	        	</if>
	        	<choose>
	        		<!-- 医疗机构管理员角色查看当前医疗机构下的机构 -->
	        		<when test="orgRole">
	        			<choose>
	        				<!-- 非叶子节点的医疗机构管理员 -->
