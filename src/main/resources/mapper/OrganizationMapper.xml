			        				<when test="user.city != null and user.city != ''">
			        					AND city = #{user.city} AND leaf = 1
			        				</when>
			        				<otherwise>
			        					<choose>
			        						<when test="user.province != null and user.province != ''">
			        							AND province = #{user.province}  AND leaf = 1
			        						</when>
