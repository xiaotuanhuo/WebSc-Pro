			        		</otherwise>
	        			</choose>
	        		</otherwise>
	        	</choose>
	        	
	        </where>) AS org left join WSC_ORGANIZATION rootOrg on org.root_id = rootOrg.org_id
	        
	        <where>
	            <if test="wso.orgName != null and wso.orgName != ''">
	                AND org.org_name like CONCAT('%', #{wso.orgName, jdbcType=VARCHAR}, '%')
	            </if>
