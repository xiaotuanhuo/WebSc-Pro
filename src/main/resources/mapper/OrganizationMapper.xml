    <select id="selectAll" parameterType="sc.system.model.WebScOrganization" resultMap="BaseResultMap">
	    select 
		    org.org_id,
			org.org_pid,
			org.credentials,
			org.narcotic_card,
			org.leaf,
			org.org_name,
			org.org_address,
			org.org_tel,
			org.leader_name,
			org.leader_tel,
			org.province,
			org.city,
			org.area,
			org.status,
			rootOrg.org_name as rootName
