	        					AND root_id = #{root_id}
	        					<choose>
	        						<!-- 当前用户所在行政区划范围 -->
					        		<when test="user.area != null and user.area != ''">
					        			AND area = #{user.area} AND leaf = 1
					        		</when>
					        		<otherwise>
					        			<choose>
					        				<when test="user.city != null and user.city != ''">
